{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "outDir": "tsout",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/jest-coverage/**/*",
    "**/__mocks__/**/*",
    "**/storybook-build/**/*",
    ".storybook/**/*",
    "builds/**/*",
    "dist/**/*",
    "ui/**/*.test.js",
    "node_modules/**",
    "development/ts-migration-dashboard/build/**/*",
    "development/ts-migration-dashboard/intermediate/**/*"
  ],
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": [
    "app",
    "development",
    "shared",
    "types",
    "ui",
    "**/*.stories.tsx",
    "app/scripts/controllers/*.test.ts",
    "app/scripts/lib/**/*.test.ts",
    "ui/**/*.test.ts",
    "ui/**/*.test.tsx"
  ]
}
